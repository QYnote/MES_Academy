        }

        //영상처리 함수부

        void equal_img()
        {
            if (inImg == null)
                return;
            // 중요! 출력이미지의 높이, 폭을 결정  --> 알고리즘에 영향
            outH = inH; outW = inW;
            outImg = new byte[RGB,outH, outW];
            // *** 진짜 영상처리 알고리즘을 구현 ***
            for (int rgb = 0; rgb < RGB; rgb++)
                for (int i = 0; i < inH; i++)
                    for (int k = 0; k < inW; k++)
                    {
                        outImg[rgb, i, k] = inImg[rgb, i, k];
                    }
            /////////////////////////////////////////////
            displayImg();
        }

        //화소점 처리

        void bright_image()
        {
            if (inImg == null)
                return;
            int value = 100;

            // 중요! 출력이미지의 높이, 폭을 결정  --> 알고리즘에 영향
            outH = inH; outW = inW;
            outImg = new byte[RGB, outH, outW];
            // *** 진짜 영상처리 알고리즘을 구현 ***
            for (int rgb = 0; rgb < RGB; rgb++)
                for (int i = 0; i < inH; i++)
                    for (int k = 0; k < inW; k++)
                    {
                        if (inImg[rgb, i, k] + value > 255)
