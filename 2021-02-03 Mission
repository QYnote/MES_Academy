                {
                    for (int m = 0; m < mSize; m++)
                    {
                        for (int n = 0; n < mSize; n++)
                        {
                            S += tmpInput[i + m, k + n] * mask[m, n];
                        }
                    }
                    tmpOutput[i, k] = S;
                    S = 0.0;    //S초기화
                }
