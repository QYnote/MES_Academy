                    if (d > 255)
                        d = 255;
                    else if (d < 0)
                        d = 0.0;
                    else
                        outImg[i, k] = (byte)d;
                }
            }


            /////////////////////////////////////////////
            displayImg();
        }

        //수평 엣지
